{
  "name": "typescript-maker",
  "version": "1.2.4",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "engines": {
    "node": ">=14 <15"
  },
  "bin": {
    "typescript-maker": "./bin/generateApp.js"
  },
  "scripts": {
    "pm2": "pm2 start",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/index",
    "dev": "nodemon --config restart.json",
    "clean": "rm -rf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest"
  },
  "author": "Dantis Mai <mtd.maithanhdanh@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express-validator": "^3.0.0",
    "bcrypt": "^5.0.1",
    "commander": "^8.3.0",
    "dayjs": "^1.11.1",
    "express": "^4.17.1",
    "express-validation": "^4.1.0",
    "http-status": "^1.5.2",
    "jwt-simple": "^0.5.6",
    "module-alias": "^2.2.2",
    "mongoose": "^6.3.2",
    "multer": "^1.4.4",
    "node-fetch": "2",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "pm2": "^5.2.0",
    "slugify": "^1.6.5",
    "tslib": "~2.3.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/multer": "^1.4.7",
    "@types/node": "~14.14.45",
    "@types/passport-jwt": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "~4.28.2",
    "@typescript-eslint/parser": "~4.28.2",
    "dotenv": "^10.0.0",
    "eslint": "~7.30.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-jest": "~24.3.6",
    "jest": "^27.0.6",
    "jest-html-reporter": "^3.4.1",
    "nodemon": "^2.0.12",
    "prettier": "~2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.5",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.2.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "tsutils": "~3.21.0",
    "typescript": "~4.3.5"
  }
}
